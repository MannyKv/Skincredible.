<resources>
    <!-- Base application theme. -->
    <style name="Theme.SOFTENG306Project1Team22" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/medium_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorSecondary">@color/light_green</item>
        <item name="colorSecondaryVariant">@color/lightest_green</item>
        <item name="colorAccent">@color/darkest_green</item>
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="android:textColor">@color/darkest_green</item>
        <item name="colorOnPrimarySurface">@android:color/transparent</item>
        <item name="fontFamily">@font/urbanist_medium</item>
    </style>

    <style name="circular_image">
        <item name="cornerSize">50%</item>
    </style>

    <style name="back_button" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="icon">@drawable/back_arrow</item>
        <item name="iconGravity">start</item>
        <item name="iconSize">30dp</item>
        <item name="iconTint">@color/darkest_green</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="left_arrow_button" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="icon">@drawable/ic_left_arrow</item>
        <item name="iconGravity">start</item>
        <item name="iconSize">30dp</item>
        <item name="iconTint">@color/light_gray</item>
    </style>

    <style name="right_arrow_button" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="icon">@drawable/ic_right_arrow</item>
        <item name="iconGravity">end</item>
        <item name="iconSize">30dp</item>
        <item name="iconTint">@color/light_gray</item>
    </style>

    <style name="search_view" parent="Widget.AppCompat.SearchView">
        <!-- Text Size -->
        <item name="android:textSize">20dp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/light_gray</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/light_gray</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/light_gray</item>
    </style>

    <style name="nav_button_highlight" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="alert_dialog" parent="MaterialAlertDialog.Material3">
        <item name="android:textColor">@color/darkest_green</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:buttonStyle">@style/alert_dialog_button</item>
    </style>

    <style name="alert_dialog_button" parent="@style/Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/medium_green</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>


</resources>
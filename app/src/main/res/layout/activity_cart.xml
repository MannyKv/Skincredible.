<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Activities.CartActivity">

    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_weight="2"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_button"
                style="@style/back_button"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:contentDescription="Go back" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:letterSpacing="0.1"
                android:text="SHOPPING CART"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                app:textAllCaps="true" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cartContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerContainer">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCartItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cartTotalContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/recommendedItemsContainer">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            app:contentPadding="5dp"
            app:contentPaddingLeft="15dp"
            app:contentPaddingRight="15dp"
            app:cardCornerRadius="50dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="CART TOTAL" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:text="$96.99" />

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recommendedItemsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/checkoutContainer">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/recommendedItemsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="recommended for you"
            android:textColor="@color/darkest_green"
            android:textSize="22dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecommendedItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recommendedItemsHeader"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            tools:visibility="visible"
            android:orientation="horizontal" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/checkoutContainer"
        android:layout_above="@id/nav_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:backgroundTint="#57958D"
            android:textSize="17sp"
            app:icon="@drawable/right_arrow"
            app:iconSize="30dp"
            app:iconGravity="end"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="CHECKOUT" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nav_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_button"
            style="@style/home_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/dark_green"
            android:contentDescription="Home"
            android:paddingTop="15dp"
            android:paddingEnd="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cart_button"
            style="@style/cart_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/dark_green"
            android:contentDescription="Cart"
            android:paddingTop="15dp"
            android:paddingEnd="5dp" />
    </RelativeLayout>
</RelativeLayout>
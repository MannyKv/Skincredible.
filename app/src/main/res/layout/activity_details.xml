<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/categoryHeaderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:textSize="22sp"
                android:text="Category Name"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/categoryHeaderImageView"
                android:layout_width="28.6sp"
                android:layout_height="28.6sp"
                android:layout_marginTop="10sp"
                android:layout_toEndOf="@+id/categoryHeaderTextView"
                android:src="@drawable/cle" />

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/brandTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="17sp"
        android:layout_marginTop="25sp"
        android:text="Brand Name" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="29sp"
        android:layout_marginTop="10sp"
        android:text="Product Name" />

    <RelativeLayout
        android:id="@+id/imageSliderContainer"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_marginTop="20sp">

        <androidx.cardview.widget.CardView
            android:id="@+id/productImageCardView"
            android:layout_width="222sp"
            android:layout_height="222sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="12sp"
            android:padding="10sp"
            app:cardCornerRadius="120sp">

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cle1_img1" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/priceCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5sp"
            app:cardCornerRadius="20sp">

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:translationZ="10sp"
                android:textSize="20sp"
                android:background="#88CEC6"
                android:paddingStart="25sp"
                android:paddingEnd="25sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="Price" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/imageSliderPrevButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:textColor="#9B9B9B"
            android:textSize="40sp"
            android:text="&lt;" />

        <Button
            android:id="@+id/imageSliderNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:textColor="#9B9B9B"
            android:textSize="40sp"
            android:text="&gt;" />

    </RelativeLayout>

</LinearLayout>
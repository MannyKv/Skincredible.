<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Activities.DetailsActivity">

    <RelativeLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#000000"
            android:background="@android:color/transparent"
            android:text="←" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/categoryHeaderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="22sp"
                android:text="Category Name"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/categoryHeaderImageView"
                android:layout_width="28.6dp"
                android:layout_height="28.6dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/categoryHeaderTextView"
                android:src="@drawable/cle" />

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/brandTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:text="Brand Name" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="29sp"
        android:layout_marginTop="10dp"
        android:text="Product Name" />

    <RelativeLayout
        android:id="@+id/imageSliderContainer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/productImageCardView"
            android:layout_width="222dp"
            android:layout_height="222dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="12dp"
            android:padding="10dp"
            app:cardCornerRadius="120dp">

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cle1_img1" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/priceCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:translationZ="20dp"
                android:textSize="20sp"
                android:background="#88CEC6"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="Price" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/previousImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:textColor="#9B9B9B"
            android:textSize="40sp"
            android:text="&lt;" />

        <Button
            android:id="@+id/nextImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:textColor="#9B9B9B"
            android:textSize="40sp"
            android:text="&gt;" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <Button
            android:id="@+id/detailsButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:backgroundTint="#FFFFFF"
            android:padding="0dp"
            android:text="details"
            android:textColor="#000000"
            android:translationZ="20dp" />

        <Button
            android:id="@+id/howToUseButton"
            android:layout_toRightOf="@+id/detailsButton"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:backgroundTint="#88CEC6"
            android:padding="0dp"
            android:text="details"
            android:textColor="#000000"
            android:translationZ="20dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/productInfoCardView"
            android:layout_below="@+id/detailsButton"
            android:backgroundTint="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="5dp"
            app:contentPaddingLeft="20dp"
            app:contentPaddingRight="20dp"
            android:translationZ="10dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/productInfoComponent1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#CBEBE7">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hello" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="hello" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/productInfoComponent2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productInfoComponent1"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#CBEBE7">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hello" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="hello" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/productInfoComponent3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productInfoComponent2"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#CBEBE7">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hello" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="hello" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/quantityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="60dp"
            android:text="QUANTITY" />

        <Button
            android:id="@+id/decreaseQuantityButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#57958D"
            android:layout_toStartOf="@+id/quantityCardView"
            android:text="-" />

        <androidx.cardview.widget.CardView
            android:id="@+id/quantityCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/quantityTextView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="1" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/increaseQuantityButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#57958D"
            android:layout_toEndOf="@+id/quantityCardView"
            android:textSize="11sp"
            android:text="+" />
    </RelativeLayout>

</LinearLayout>